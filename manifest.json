{
  "manifest_version": 3,
  "name": "Upwork Job to Telegram",
  "version": "1.0",
  "description": "Sends the current Upwork job link to a Telegram bot.",
  "permissions": ["activeTab","scripting"],

  "action": {

    "default_title": "Send to Telegram"
    
  },
  "content_scripts" :[
    {
      "matches": ["https://www.upwork.com/*"],
      "js": ["content_script.js"]
    }
  ]

  
}
